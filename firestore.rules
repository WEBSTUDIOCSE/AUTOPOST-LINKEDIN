rules_version = '2';

/**
 * Firestore Security Rules — Production Only
 *
 * Deploy with: firebase deploy --only firestore:rules
 *
 * Strategy:
 *   - Users can only read and write their own documents (owner-only).
 *   - The document ID must match the authenticated user's UID where applicable.
 *   - userId field is validated on create to prevent spoofing.
 *   - All other paths are denied by default (deny-first model).
 *
 * Collections (all production — no UAT environment):
 *   prod_users                — user profiles
 *   payments                  — payment records
 *   prod_series               — LinkedIn post series
 *   prod_posts                — AI drafts through to published posts
 *   prod_ideas                — user idea bank
 *   prod_autoposter_profiles  — LinkedIn tokens, schedule, persona
 */
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper Functions ─────────────────────────────────────────────────────

    // Returns true when the caller is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Returns true when the caller owns the document (UID matches doc ID)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ── User Profiles ────────────────────────────────────────────────────────
    match /prod_users/{userId} {
      allow read:   if isOwner(userId);
      allow create: if isOwner(userId)
        && request.resource.data.uid == request.auth.uid;
      allow update: if isOwner(userId)
        && request.resource.data.uid == resource.data.uid;
      allow delete: if isOwner(userId);
    }

    // ── Payments ─────────────────────────────────────────────────────────────
    // Users can read their own payment records; writes are server-only (Admin SDK)
    match /payments/{paymentId} {
      allow read: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    // ── Autoposter: Series ───────────────────────────────────────────────────
    match /prod_series/{seriesId} {
      allow read, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
    }

    // ── Autoposter: Posts ────────────────────────────────────────────────────
    match /prod_posts/{postId} {
      allow read, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
    }

    // ── Autoposter: Ideas ────────────────────────────────────────────────────
    match /prod_ideas/{ideaId} {
      allow read, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // ── Autoposter: Profiles (LinkedIn tokens, schedule, persona) ────────────
    // Doc ID = userId so we use isOwner()
    match /prod_autoposter_profiles/{userId} {
      allow read, create, update, delete: if isOwner(userId);
    }

    // ── Default Deny ─────────────────────────────────────────────────────────
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
